pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                withMaven(jdk: 'JDK', maven: 'Maven', mavenLocalRepo: '/Users/sukhjinderkaur/.m2',) {
                    sh "mvn clean package -DskipTests"
                }
           }

            post {
                success {
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }
}
